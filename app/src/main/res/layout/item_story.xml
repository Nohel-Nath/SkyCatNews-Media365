<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_8">

    <ImageView
        android:id="@+id/imgStory"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:background="@drawable/download"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStoryHeadline"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_2"
        android:text="@string/story_headline"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/imgStory"
        app:layout_constraintEnd_toStartOf="@id/tvStoryTime"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStoryTeaser"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvStoryHeadline"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/teaser_text"
        android:textColor="@color/vampireblack"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/imgStory"
        app:layout_constraintTop_toBottomOf="@id/tvStoryHeadline" />

    <TextView
        android:id="@+id/tvStoryTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:text="@string/_8m_ago"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="@id/tvStoryHeadline" />

    <View
        android:id="@+id/viewStory"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="30dp"
        android:background="@color/charcoal"
        app:layout_constraintEnd_toEndOf="@id/tvStoryTime"
        app:layout_constraintStart_toStartOf="@id/tvStoryHeadline"
        app:layout_constraintTop_toBottomOf="@id/tvStoryTeaser" />

</androidx.constraintlayout.widget.ConstraintLayout>
